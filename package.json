{
  "name": "@1productaweek/react-virtualized-grid",
  "version": "0.1.6",
  "description": "Grid component, powered by React-Virtualized",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean &&  NODE_ENV=production  babel src --ignore .spec.js,__mocks__ -d dist --copy-files --extensions '.ts,.tsx,.js' && rimraf -rf dist/**/__tests__ && yarn build:types",
    "build:types": "tsc -p tsconfig.types.json",
    "install:peers": "install-peers -f",
    "prepare": "npm run clean && npm run build && yarn install:peers",
    "release": "yarn publish --access=public",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "files": [
    "dist/*"
  ],
  "author": "Calum Moore",
  "license": "MIT",
  "homepage": "https://github.com/1productaweek/react-virtualized-grid",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-transform-react-display-name": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/react-outside-click-handler": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "add": "^2.0.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-emotion": "^10.0.33",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-source-map-support": "^2.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^7.0.0-beta.3",
    "babel-preset-react-app": "^9.1.2",
    "babel-register": "^7.0.0-beta.3",
    "eslint": "^7.5.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
